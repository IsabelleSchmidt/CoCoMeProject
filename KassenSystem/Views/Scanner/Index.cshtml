@model IEnumerable<KassenSystem.Models.ItemModel>
@{
}

<div class="text-center">
    <h1 class="display-4">Produkte im Store</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if(item.Amount > 0)
                {
                     <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td><a asp-controller="Item" asp-action="Create" asp-route-id="@item.Id">Hinzufügen</a></td>


                </tr>
                }
               
            }
        </tbody>
    </table>

</div>