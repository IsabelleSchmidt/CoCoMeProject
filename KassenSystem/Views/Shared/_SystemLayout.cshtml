<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KassenSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 _layout-header">
            <div class="container">
               
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                   <div class="navbar-brand" >Kassensystem</div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
             <div class="col">
                <h1 class="text-center">Kasse</h1>
                <div class="container cashbox-keys">
                    <div class="row">
                      <div class="col cash-box-button">1</div>
                      <div class="col cash-box-button">2</div>
                      <div class="col cash-box-button">3</div>
                      <div class="col cash-box-button">-</div>
                     </div>           
                     <div class="row">
                      <div class="col cash-box-button">4</div>
                      <div class="col cash-box-button">5</div>
                      <div class="col cash-box-button">6</div>
                      <div class="col cash-box-button">X</div>
                      </div>         
                     <div class="row">
                      <div class="col cash-box-button">7</div>
                      <div class="col cash-box-button">8</div>
                      <div class="col cash-box-button">9</div>
                      <div class="col cash-box-button">€</div>
                       </div>         
                     <div class="row">
                      <div class="col cash-box-button">,</div>
                      <div class="col cash-box-button">0</div>
                      <div class="col cash-box-button">00</div>
                      <div class="col cash-box-button">OK</div>
                    </div>            
                </div>                
                                     
                <div class="container cashbox-keys">
                     <div class="row">
                      <div class="col cash-box-input-field"> ... </div>
                    </div> 
                </div>             
                                     
                <div class="container cashbox-keys">
                    <div class="row">
                      <div class="col cash-box-button">Neuer Kassiervorgang</div>
                      <div class="col cash-box-button">Zur Bezahlung</div>
                    </div>           
                    <div class="row"> 
                      <div class="col cash-box-button">Objekt-Id eingeben</div>
                      <div class="col cash-box-button">Objekt + 1</div>
                                     
                    </div>           
                    <div class="row"> 
                      <div class="col cash-box-button">Objekt Löschen</div>
                      <div class="col cash-box-button">Preis eingeben</div>
                    </div>           
                                     
                 </div>             
                                     
                <div class="container cashbox-keys">
                    <div class="row"> 
                      <div class="col cash-box-button">Express-Kasse beenden</div>
                      <div class="col cash-box-button">???</div>
                    </div>
                     
                </div>
               
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - KassenSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
