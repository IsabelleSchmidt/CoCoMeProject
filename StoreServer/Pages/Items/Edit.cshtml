@page
@model StoreServer.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Bearbeiten</h1>

<h4>Produkt identifizieren</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemIdentifier.ID" />
            <div class="form-group">
                <label asp-for="ItemIdentifier.Name" class="control-label"></label>
                <input asp-for="ItemIdentifier.Name" class="form-control" />
                <span asp-validation-for="ItemIdentifier.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="back" asp-page="./Index">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
