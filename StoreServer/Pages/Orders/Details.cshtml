@page
@model StoreServer.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        @if (Model.Order.Received) 
        {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.RecieveDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.RecieveDate)
        </dd>
        }
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Count
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItem) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemIdentifier.Name)
                    </td>
                    <td>
                        <div class="form-group">
                            <input asp-for="@item.Count" class="form-control" style="width:100px" readonly/>
                            <span asp-validation-for="OrderItem.Count" class="text-danger"></span>
                        </div>                                
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.ID">Accept</a> |
    <a asp-page="./Index">Back to List</a>
</div>
