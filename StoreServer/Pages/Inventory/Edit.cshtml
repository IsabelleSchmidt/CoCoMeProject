@page
@model StoreServer.Pages.Inventory.EditModel

@{
    ViewData["Title"] = "Change Price";
}

<h1>Change Price</h1>

<h4>@Model.InventoryItemName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryItem.ID" />
            <input type="hidden" asp-for="InventoryItem.ItemIdentifier.ID" />
            <div class="form-group">
                <label asp-for="InventoryItem.ItemIdentifier.Name" class="control-label"></label>
                <input asp-for="InventoryItem.ItemIdentifier.Name" class="form-control" readonly/>
                <span asp-validation-for="InventoryItem.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryItem.Count" class="control-label"></label>
                <input asp-for="InventoryItem.Count" class="form-control" readonly/>
                <span asp-validation-for="InventoryItem.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryItem.Price" class="control-label"></label>
                <input asp-for="InventoryItem.Price" class="form-control" />
                <span asp-validation-for="InventoryItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
