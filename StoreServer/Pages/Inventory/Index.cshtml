@page
@model StoreServer.Pages.Inventory.IndexModel

@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>

@*<p>
    <a asp-page="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItem[0].Price)
            </th>
            <th>
                Infos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InventoryItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.InventoryItemNames[item.ItemIdentifierID])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (item.Count < 10)
                {
                    <p style="color:red">Low in Stock!</p>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Change Price</a>
            </td>
        </tr>
}
    </tbody>
</table>
